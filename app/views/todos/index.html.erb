<table class="table table-striped table-bordered table-condensed">
  <% @todos.each do |todo| %>
    <tr>
      <td>
        <% if todo.status == "yes" %>
          <%= label_tag(:done, "DONE") %>
        <% elsif todo.status == "no" %>
          <%= label_tag(:undone, "UNDONE") %>
        <% else %>
          <%= label_tag(:overdue, "OVERDUE") %>
        <% end %>
      </td>
      <td><%= todo.name %></td>
      <td><%= todo.due_date %></td>
      <td>
        <%= link_to 'Detail', todo_path(todo), type: "button", class: "btn btn-default" %>
        <%= link_to 'Edit', edit_todo_path(todo), type: "button", class: "btn btn-default" %>
        <% if todo.status == "over" %>
          <%= link_to 'Delete', todo_path(todo), method: :delete, data:{ confirm: "Are you sure?"}, type: "button", class: "btn btn-default disabled" %>
        <% else %>
          <%= link_to 'Delete', todo_path(todo), method: :delete, data:{ confirm: "Are you sure?"}, type: "button", class: "btn btn-default" %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>

