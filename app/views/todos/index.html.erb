<table class="table table-striped table-bordered table-condensed">
  <% @todos.each do |todo| %>
    <tr>
      <th>
        <% if todo.status == "yes" %>
          <h4><%= label :done, "DONE", class: "label label-success" %></h4>
        <% elsif todo.status == "no" %>
          <h4><%= label :undone, "UNDONE", class: "label label-warning" %></h4>
        <% else %>
          <h4><%= label :overdue, "OVERDUE", class: "label label-default" %></h4>
        <% end %>
      </th>
      <th><%= todo.name %></th>
      <th><%= todo.due_date %></th>
      <th>
        <%= link_to todo_path(todo), class: "btn btn-default" do %>
            <i class="glyphicon glyphicon-list-alt"></i> Detail
        <% end %>
        <%= link_to edit_todo_path(todo), class: "btn btn-default" do %>
            <i class="glyphicon glyphicon-pencil"></i> Edit
        <% end %>
        <% if todo.status == "over" %>
          <%= link_to todo_path(todo), method: :delete, data:{ confirm: "Are you sure?"}, type: "button", class: "btn btn-default disabled" do %>
              <i class="glyphicon glyphicon-trash"></i> Delete
          <% end %>
        <% else %>
          <%= link_to todo_path(todo), method: :delete, data:{ confirm: "Are you sure?"}, type: "button", class: "btn btn-default" do %>
              <i class="glyphicon glyphicon-trash"></i> Delete
          <% end %>
        <% end %>
      </th>
    </tr>
  <% end %>
</table>

<%= link_to new_todo_path, class: "btn btn-default" do %>
    <i class="glyphicon glyphicon-plus"></i> New To Do
<% end %>
