<ul>
  <% @todos.each do |todo| %>
    <li>
      <%= todo.status %>
      <%= todo.name %>
      <%= link_to 'Detail', todo_path(todo) %>
      <%= link_to 'Edit', edit_todo_path(todo) %>
      <%= link_to 'Delete', todo_path(todo), method: :delete, data:{ confirm: "Are you sure?"} %>
    </li>
  <% end %>
</ul>

<%= link_to 'New To Do', new_todo_path %>
